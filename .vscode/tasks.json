{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Kill Port 3000",
      "type": "shell",
      "command": "lsof -ti:3000 | xargs kill -9 2>/dev/null || true",
      "problemMatcher": []
    },
    {
      "label": "Start Dev Server",
      "type": "shell",
      "command": "npm run dev",
      "isBackground": true,
      "problemMatcher": {
        "pattern": {
          "regexp": "^.*$"
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": ".*",
          "endsPattern": "Local:.*http://localhost:3000"
        }
      }
    },
    {
      "label": "Dev on Port 3000",
      "dependsOrder": "sequence",
      "dependsOn": [
        "Kill Port 3000",
        "Start Dev Server"
      ],
      "problemMatcher": []
    }
  ]
}
